
@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Add User Profile</h1>

<div class="mb-3 mt-3">
    <form method="post" asp-controller="UserProfile" asp-action="Index"
          enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div class="form-control">
            
            <label class="header">Profile Photo:</label>

            <input id="image" type="file" name="ProfileImageFile" placeholder="Photo" required="" capture>
        </div>
        <div class="form-control">
            
            <label class="form-label">Upload Resume</label>
            <input type="file" name="ResumeFile" />
        </div>

        <div class="form-control">
            <label class="header">First Name:</label>
            <input type="text" id="fname" name="firstName" required="">
        </div>

        <div class="form-control">
            <label class="header">Last Name :</label>
            <input type="text" id="lname" name="lastName"  required="">
        </div>

        <div class="form-control">
            <label class="header">Address :</label>
            <input type="text" id="address" name="address" required="">
        </div>

        <div class="form-control">
            <label class="header">Phone Number :</label>
            <input type="text" id="contact_number" name="PhoneNumber" placeholder="Contact Number" required="">
        </div>

        <div class="form-control">
            <label class="header"> Email :</label>
            <input type="email" id="contact_email" name="Email" placeholder="Contact Email" required="">
        </div>
        <br/>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>